{
    "plugins": [
        "prettier-plugin-solidity"
    ],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 80,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": true
            }
        },
        {
            "files": "*.ts",
            "options": {
                "printWidth": 120,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "trailingComma": "none"
            }
        },
        {
            "files": "*.js",
            "options": {
                "printWidth": 120,
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "trailingComma": "none"
            }
        }
    ]
}